# ============================================
# Devfest-2026 OCR Server
# ============================================
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies for EasyOCR
RUN apt-get update && apt-get install -y \
    curl \
    libgl1-mesa-glx \
    libglib2.0-0 \
    libsm6 \
    libxext6 \
    libxrender-dev \
    libgomp1 \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.txt .

# Install Python dependencies (includes easyocr, PyMuPDF, pillow)
RUN pip install --no-cache-dir -r requirements.txt

# Pre-download EasyOCR English model
RUN python -c "import easyocr; reader = easyocr.Reader(['en'], gpu=False)"

# Copy application code
COPY . .

# Expose port
EXPOSE 8003

# Environment variables
ENV PYTHONUNBUFFERED=1

# Run the OCR server
CMD ["uvicorn", "app2:app", "--host", "0.0.0.0", "--port", "8003"]
